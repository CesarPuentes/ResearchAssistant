# DeepSeek API Configuration
deepseek:
  api_key: null  # Set via environment variable DEEPSEEK_API_KEY
  base_url: "https://api.deepseek.com/v1"
  model: "deepseek-chat"
  temperature: 0.7
  max_tokens: 4000

# Email Configuration
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  use_tls: true
  from_address: null  # Set via environment variable EMAIL_FROM
  password: null  # Set via environment variable EMAIL_PASSWORD

# Search Configuration
search:
  default_tool: "duckduckgo"  # Options: duckduckgo, google, tavily
  max_results: 10
  search_depth: 3  # How many search iterations the agent can perform

# Scheduler Configuration
scheduler:
  default_interval_hours: 6
  timezone: "America/New_York"
  max_history_days: 30  # Keep monitoring data for 30 days

# Application Settings
app:
  log_level: "INFO"
  data_dir: "./data"
  logs_dir: "./logs"
  database_path: "./data/news_aggregator.db"
